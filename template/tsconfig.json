{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "dom", 
            "es5", 
            "es2015",
            "es2015.promise"
        ],
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "removeComments": false,
        "allowJs":true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}